extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet" href="/css/product.css") 

block content 
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://images.pexels.com/photos/2465877/pexels-photo-2465877.jpeg", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__descriptions A very interesting book about so many even more interesting thing!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products    